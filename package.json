{
  "name": "mc-api-desktop",
  "version": "1.3.4",
  "description": "Herramienta para interactuar con la API de Marketing Cloud",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "build": "electron-packager . MC-API-Helper --platform=win32 --arch=x64 --icon=icon.ico --out=dist --overwrite",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.2",
    "keytar": "^7.9.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.seidor.mc-api-desktop",
    "productName": "MC API Helper",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "forceCodeSigning": false,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico"
    },    
    "publish": { 
      "provider": "github",
      "owner": "rfernandezvega", 
      "repo": "MC-API-Helper",
      "private": true
    }
  }
}